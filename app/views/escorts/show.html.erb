<div class="container">
  <div class="attention">
    <div class="attention-alert">
      Attention, <%= @escort.name.capitalize %> est un buddy très doux et très attentioné... Réservez-vite !
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-lg-6">
      <div class= "card-show">
        <div class="top">
          <div class="face">
            <%= cl_image_tag @escort.photo, alt: "alttext", class: "avatar-large" %>
          </div>
        </div>
          <div class="bottom">
            <h1 style="margin-bottom:0;"><%= @escort.name.capitalize %> (<%= @escort.age %> ans)</h1>
            <div class= "price"><%= @escort.price_per_day %> €/jour</div>
            <p><%= @escort.city %></p>
              <div class= "size">Taille : <%= @escort.size %> cm</div>
              <div class= "size">Cheveux : <%= @escort.hair_color %>s</div>
              <div class= "size"><%= @escort.origin %></div>
            </div>
            <% if current_user.nil? %>
            <button class="btn-principal" data-toggle="modal" data-target="#exampleModalCenter">⭐ Réserver</a>
          <% elsif current_user.user_type == "0" %>
            <%= link_to "⭐ Réserver", escort_bookings_path(@escort), method: :post, class: "btn-principal" %>
          <% end %>
      </div>
    </div>
    <div class="col-12 col-lg-6">
      <div
        id="map"
        class="no-sticky"
        style="margin-top: 20px; width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
     <div>
</div>


<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
