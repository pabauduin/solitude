
<%= simple_form_for(@escort) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :age %>
    <%= f.input :size %>
    <%= f.input :type %>
    <%= f.input :city %>
    <%= f.input :hair_color %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>



